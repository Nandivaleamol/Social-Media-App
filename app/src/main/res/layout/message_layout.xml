    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="message"
        android:id="@+id/receiver_tv"
        android:textColor="@color/white"
        android:layout_margin="5dp"
        android:visibility="visible"
        android:layout_gravity="left"
        android:background="@drawable/receiver_back"
        android:textSize="15sp"
        android:padding="9dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="message"
        android:id="@+id/sender_tv"
        android:textColor="@color/white"
        android:layout_margin="5dp"
        android:visibility="visible"
        android:layout_gravity="right"
        android:background="@drawable/sender_back"
        android:textSize="15sp"
        android:padding="9dp"/>
    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/iv_receiver"
        android:visibility="gone"/>
    <ImageView
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:id="@+id/iv_sender"
        android:layout_gravity="right"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:id="@+id/ll_sender"
        android:layout_margin="1dp"
        android:layout_gravity="right">
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:padding="5dp"
            android:src="@drawable/sender_left"
            android:background="@drawable/button_back"
            android:id="@+id/play_message_sender"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Audio File"
            android:gravity="center"
            android:background="@drawable/sender_right"
            android:textColor="@color/white"
            android:textSize="15sp"
            android:padding="8dp"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:visibility="gone"
        android:id="@+id/ll_receiver"
        android:layout_margin="1dp"
        android:layout_gravity="left">
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:padding="5dp"
        android:src="@drawable/ic_baseline_black"
        android:background="@drawable/receiver_left"
        android:id="@+id/play_message_receiver"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:text="Audio File"
        android:gravity="center"
        android:background="@drawable/receiver_right"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:padding="8dp" />
    </LinearLayout>
</LinearLayout>