<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/relativeLayout"
    tools:context=".Fragments.ProfileFragment1">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_gravity="top"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_below="@id/relativeLayout"
        android:gravity="top"
        android:orientation="horizontal"
        tools:ignore="NotSibling">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="top"
            android:layout_marginBottom="5dp"
            app:cardBackgroundColor="@android:color/white">

            <ImageButton
                android:id="@+id/ib_menu_fp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_margin="10dp"
                android:background="@android:color/transparent"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:src="@drawable/ic_baseline_menu_24"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_margin="10dp"
                android:text="MY PROFILE"
                android:textColor="@color/red"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageButton
                android:id="@+id/ib_edit_fp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical"
                android:layout_margin="10dp"
                android:background="@android:color/transparent"
                android:minWidth="48dp"
                android:minHeight="48dp"
                android:src="@drawable/ic_baseline_edit_24"
                tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linearLayout1"
        android:layout_gravity="top"
        android:layout_marginBottom="10dp"
        android:gravity="top"
        android:orientation="horizontal"
        android:padding="10dp">

        <androidx.cardview.widget.CardView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="1dp"
            android:elevation="8dp"
            app:cardCornerRadius="60dp"
            app:cardElevation="10dp"
            app:cardPreventCornerOverlap="false">

            <ImageView
                android:id="@+id/iv_pf"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/ic_person"
                android:clickable="true"
                tools:ignore="SpeakableTextPresentCheck" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name_pf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:drawableStart="@drawable/ic_person"
                android:drawablePadding="7dp"
                android:gravity="start"
                android:hint="name"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:textAlignment="viewStart"
                android:textColor="@android:color/darker_gray"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv_prof_pf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:drawableStart="@drawable/ic_profession"
                android:drawablePadding="7dp"
                android:gravity="start"
                android:hint="profession"
                android:paddingStart="10dp"
                android:paddingLeft="10dp"
                android:textAlignment="viewStart"
                android:textColor="@android:color/darker_gray"
                android:textSize="24sp" />
        </LinearLayout>

    </LinearLayout>
    <TextView
        android:id="@+id/textview3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:text="PRIMARY DETAILS"
        android:paddingStart="40dp"
        android:padding="5dp"
        android:drawablePadding="20dp"
        android:textStyle="bold"
        android:textAlignment="viewStart"
        android:textColor="@android:color/black"
        android:layout_below="@+id/linearLayout2"
        android:gravity="start"
        android:textSize="15sp"/>

<LinearLayout
    android:orientation="vertical"
    android:padding="10dp"
    android:id="@+id/linearLayout4"
    android:layout_below="@id/textview3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bio"
        android:textSize="15sp"
        android:layout_marginStart="20dp"
        android:padding="5dp"
        android:textColor="@android:color/darker_gray"
        android:drawablePadding="20dp"
        android:paddingStart="20dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bio"
        android:textSize="15sp"
        android:layout_marginStart="20dp"
        android:padding="5dp"
        android:textColor="@android:color/black"
        android:drawablePadding="20dp"
        android:paddingStart="20dp"
        android:id="@+id/tv_bio_pf"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="15sp"
        android:layout_marginStart="20dp"
        android:padding="5dp"
        android:textColor="@android:color/darker_gray"
        android:drawablePadding="20dp"
        android:paddingStart="20dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Email"
        android:textSize="15sp"
        android:layout_marginStart="20dp"
        android:padding="5dp"
        android:textColor="@android:color/black"
        android:drawablePadding="20dp"
        android:paddingStart="20dp"
        android:id="@+id/tv_email_pf"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Website"
        android:textSize="15sp"
        android:layout_marginStart="20dp"
        android:padding="5dp"
        android:textColor="@android:color/darker_gray"
        android:drawablePadding="20dp"
        android:paddingStart="20dp" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Website"
        android:textSize="15sp"
        android:layout_marginStart="20dp"
        android:padding="5dp"
        android:textColor="@android:color/holo_blue_light"
        android:drawablePadding="20dp"
        android:paddingStart="20dp"
        android:id="@+id/tv_web_pf"/>
</LinearLayout>

    <TableRow
        android:layout_below="@id/linearLayout4"
        android:layout_height="1dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="20dp"
        android:background="@android:color/darker_gray"
        android:layout_width="match_parent"/>
    <LinearLayout
        android:id="@+id/linearLayout5"
        android:layout_below="@id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp"
        android:gravity="center">

        <TextView
            android:id="@+id/tv_followers_pf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:drawableStart="@drawable/ic_baseline_people_24"
            android:drawablePadding="5dp"
            android:padding="5dp"
            android:text="Followers"
            android:textColor="@android:color/black"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/tv_posts_pf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:drawableStart="@drawable/ic_baseline_add_photo_alternate_24"
            android:drawablePadding="5dp"
            android:padding="5dp"
            android:text="Posts"
            android:textColor="@android:color/black"
            tools:ignore="TouchTargetSizeCheck" />

        <TextView
            android:id="@+id/tv_new_pf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:clickable="true"
            android:drawableStart="@drawable/ic_baseline_notifications_active_24"
            android:drawableLeft="@drawable/ic_baseline_add_photo_alternate_24"
            android:drawablePadding="5dp"
            android:padding="5dp"
            android:text="New"
            android:textColor="@color/black"
            tools:ignore="TouchTargetSizeCheck" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_addstories_pf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearLayout5"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/border_demo"
        android:gravity="center"
        android:padding="5dp"
        android:text="Add Stories"
        android:textColor="@color/red"
        android:textSize="24sp" />

    <Button
        android:id="@+id/btn_sendmessage_pf"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_addstories_pf"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_back"
        android:gravity="center_horizontal"
        android:padding="4dp"
        android:text="Send Message"
        android:textColor="@color/white"
        android:textSize="18sp" />


</RelativeLayout>